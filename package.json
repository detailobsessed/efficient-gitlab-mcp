{
  "name": "efficient-gitlab-mcp-server",
  "version": "0.3.0",
  "mcpName": "io.github.detailobsessed/efficient-gitlab",
  "description": "Production-ready GitLab MCP Server with progressive disclosure pattern",
  "license": "MIT",
  "author": "Ismar <ismart@gmail.com>",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "efficient-gitlab-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/detailobsessed/efficient-gitlab-mcp.git"
  },
  "keywords": [
    "gitlab",
    "mcp",
    "model-context-protocol",
    "ai",
    "api"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "bun build src/server/index.ts --outdir dist --target node",
